<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".crop">

    <Spinner
        android:id="@+id/soil"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_soil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:gravity="center" />
    <Spinner
        android:id="@+id/climite"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_dist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:gravity="center" />
    <Spinner
        android:id="@+id/month"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_climate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:gravity="center"
        android:text="Submit"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Result:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="20dp" />
    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="medium-grain rice include Arborio, Calrose, and Bomba rice. Medium-grain rice has a slightly shorter and plumper grain compared to long-grain rice. It is commonly used in dishes like risotto, paella, and sushi"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />
</LinearLayout>